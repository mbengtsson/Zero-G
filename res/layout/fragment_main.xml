<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_left"
    android:orientation="vertical"
    tools:context="se.bengtsson.zerog.fragments.MainFragment"
    tools:ignore="MergeRootFrame" >

    <ImageButton
        android:id="@+id/title_button"
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/title_sm" 
        android:onClick="titleClick"
        android:contentDescription="@string/zero_g"/>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            style="?android:attr/buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/single_player_button"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="singlePlayerClick"
                android:text="@string/single_player_button" />

            <Button
                android:id="@+id/multi_player_button"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="multiPlayerClick"
                android:text="@string/multi_player_button" />

            <Button
                android:id="@+id/statistics_button"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="statisticsClick"
                android:text="@string/statistics_button" />

            <Button
                android:id="@+id/share_button"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="shareClick"
                android:text="@string/share" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>
