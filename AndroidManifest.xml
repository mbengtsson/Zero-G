<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="se.bengtsson.thegame"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="se.bengtsson.thegame.activities.MainActivity"
            android:screenOrientation="landscape"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity 
            android:name="se.bengtsson.thegame.activities.game.MultiplayerGameActivity"
            android:screenOrientation="landscape" >
        </activity>
        <activity 
            android:name="se.bengtsson.thegame.activities.game.SingleplayerGameActivity"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="se.bengtsson.thegame.activities.MultiPlayerActivity"
            android:screenOrientation="landscape"
            android:label="@string/title_activity_multi_player" >
        </activity>
        <activity
    		android:name="se.bengtsson.thegame.activities.StatisticsActivity"
            android:screenOrientation="landscape"
            android:label="@string/title_activity_post_fight" >
        </activity>
        <activity
            android:name="se.bengtsson.thegame.activities.ShareWithContactActivity"
            android:screenOrientation="landscape"
            android:label="@string/title_activity_share_with_contact" >
        </activity>

        <service android:name="se.bengtsson.thegame.bluetooth.BluetoothCommunicationService" />
        
    </application>

</manifest>
